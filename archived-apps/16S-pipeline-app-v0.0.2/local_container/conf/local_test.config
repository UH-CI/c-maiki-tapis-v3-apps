 *
 */

singularity.enabled = true

executor{
    jobName = {"$task.tag"}
    queueSize = 3
}

process {
    executor = 'local'

    errorStrategy = {task.exitStatus == 143 ? 'retry' : 'terminate'}
    maxRetries = 2

	withLabel: low_computation {
		 cpus = 1
		 memory = 2.GB
		 time = 3.m
	}

	withLabel: medium_computation {
		 cpus = 2
		 memory = 4.GB
		 time = 6.m
	}

	withLabel: high_computation {
		 cpus = 2
		 memory = 7.GB
		 time = 30.m
	}
}